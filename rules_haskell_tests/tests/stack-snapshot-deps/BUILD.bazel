load(
    "@rules_haskell//haskell:defs.bzl",
    "haskell_test",
)
load("//tests/integration_testing:rules_haskell_integration_test.bzl", "rules_haskell_integration_test")

package(default_testonly = 1)

haskell_test(
    name = "stack-snapshot-deps",
    srcs = ["Main.hs"],
    visibility = ["//visibility:public"],
    deps = [
        "@stackage-zlib//:zlib",
        "@stackage//:base",
        # Core package that is no dependency of another item in the snapshot.
        "@stackage//:ghc-heap",
        # Packages using ./configure scripts are problematic on Windows.
        "@stackage//:network",
        "@stackage//:language-c",
        # Package that has a setup dependency.
        "@stackage//:polysemy",
    ],
)

rules_haskell_integration_test(
    name = "hs_override_stack_test",
    srcs = ["HsOverrideStackTest.hs"],
    workspace_path = "hs_override_stack_test",
)

filegroup(
    name = "all_files",
    testonly = True,
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)
