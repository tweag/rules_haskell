    name = "lib",
    srcs = ["TestLib.hs"],
    reexported_modules = {
        ":sublib": "TestSubLib",
        "//tests/hackage:containers": "Data.Map as Lib.Map",
    },
    deps = [
        ":sublib",
        "//tests/hackage:base",
    ],
