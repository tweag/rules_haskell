    name = "sublib",
    srcs = ["TestSubLib.hs"],
    reexported_modules = {"//tests/hackage:containers": "Data.Map as SubLib.Map"},
    deps = [
        "//tests/hackage:base",
        "//tests/hackage:containers",
    ],
