package(default_testonly = 1)

load("@io_tweag_rules_haskell//haskell:haskell.bzl",
  "haskell_library",
  "haskell_cc_import",
)

filegroup (
  name = "include",
  srcs = glob(["cbits/*.h"]),
)

filegroup (
  name = "lib",
  srcs = glob([
    "lib/*.so",
    "lib/*.so.*",
    "lib/*.dylib",
  ]),
)

haskell_cc_import(
  name = "zlib-import",
  shared_library = ":lib",
  hdrs = [":include"],
  strip_include_prefix = "cbits",
)

haskell_library(
  name = "zlib",
  srcs = glob([
    "Codec/Compression/*.hs",
    "Codec/Compression/Zlib/*.hs",
    "Codec/Compression/Zlib/*.hsc",
  ]),
  deps = [
    ":zlib-import",
    "@io_tweag_rules_haskell//tests:base",
    "@io_tweag_rules_haskell//tests:bytestring",
    "@io_tweag_rules_haskell//tests:ghc-prim",
  ],
)
