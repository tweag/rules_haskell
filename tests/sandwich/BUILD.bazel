load("@rules_cc//cc:defs.bzl", "cc_library")
load(
    "@rules_haskell//haskell:defs.bzl",
    "haskell_library",
    "haskell_test",
)

cc_library(
    name = "cbits",
    srcs = ["test.c"],
    copts = ["-Wno-unused-label"],
    deps = ["//tests/hackage:rts"],
)

haskell_library(
    name = "testlib",
    srcs = ["Lib.hs"],
    compiler_flags = [
        "-Wall",
        "-Werror",
    ],
    deps = [
        ":cbits",
        "//tests/hackage:base",
    ],
)

haskell_test(
    name = "test",
    srcs = ["Main.hs"],
    compiler_flags = [
        "-Wall",
        "-Werror",
    ],
    deps = [
        ":testlib",
        "//tests/hackage:base",
    ],
)

filegroup(
    name = "starlark_files",
    testonly = True,
    srcs = ["BUILD.bazel"],
    visibility = ["//visibility:public"],
)
