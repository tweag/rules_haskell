load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_binary", "haskell_library", "haskell_import")

haskell_import(name = "base")

cc_library(
    name = "cbits-indirect",
    srcs = ["cbits/impl.c"],
)

cc_library(
    name = "cbits",
    srcs = ["cbits/intf.c"],
    deps = ["cbits-indirect"],
)


haskell_library(
    name = "mypkg",
    srcs = ["src/MyModule.hs"],
    src_strip_prefix = "src",
    deps = [":cbits", ":base"],
)

haskell_binary(
    name = "mytest",
    srcs = ["test/Main.hs"],
    src_strip_prefix = "test",
    deps = [":mypkg", ":base"],
)
