"""
Minimal reproduction of https://github.com/tweag/rules_haskell/issues/1111
"""

load("//haskell:defs.bzl", "haskell_library")
load(
    "//haskell:protobuf.bzl",
    "haskell_proto_library",
    "haskell_proto_toolchain",
)

proto_library(
    name = "foo",
    srcs = ["foo.proto"],
    deps = ["@com_google_protobuf//:descriptor_proto"],
)

haskell_proto_library(
    name = "foo_haskell",
    tags = [
        # Requires proto-lens >=0.6.0.0. On Windows we're stuck on 0.5.1.0 until we can update GHC.
        "dont_test_on_windows",
        "requires_dynamic",
    ],
    deps = [
        ":foo",
    ],
)

haskell_library(
    name = "hs-lib",
    srcs = ["Bar.hs"],
    tags = [
        "dont_test_on_windows",
        "requires_dynamic",
    ],
    visibility = ["//visibility:public"],
    deps = [
        ":foo_haskell",
        "//tests/hackage:base",
        "@stackage//:proto-lens",
    ],
)

filegroup(
    name = "starlark_files",
    testonly = True,
    srcs = ["BUILD.bazel"],
    visibility = ["//visibility:public"],
)
