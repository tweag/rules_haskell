"""Test compilation of a multiple interdependent Haskell modules with only core-package dependencies."""

load("@rules_haskell//haskell/experimental:defs.bzl", "haskell_module")

haskell_module(
    name = "root",
    src = "src1/Root.hs",
    src_strip_prefix = "src1",
    deps = ["//tests/hackage:base"],
)

haskell_module(
    name = "branch_left",
    src = "BranchLeft.hs",
    deps = [
        ":root",
        "//tests/hackage:base",
    ],
)

haskell_module(
    name = "branch_right",
    src = "BranchRight.hs",
    deps = [
        ":root",
        "//tests/hackage:base",
    ],
)

haskell_module(
    name = "leaf",
    src = "Leaf.hs",
    deps = [
        ":branch_left",
        ":branch_right",
        "//tests/hackage:base",
    ],
)

filegroup(
    name = "all_files",
    testonly = True,
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)
